{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@stock-portfolio/db": [
        "../db/dist"
      ],
      "@prisma/client": [
        "./node_modules/@prisma/client"
      ],
      "@prisma/client/runtime/library": [
        "./node_modules/@prisma/client/runtime/library"
      ]
    },
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "express",
      "node-fetch"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "../db/dist",
      "./node_modules/.prisma/client"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "node_modules/.prisma/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}