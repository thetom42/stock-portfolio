  "devDependencies": {
    "@types/chai": "^4.3.8",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/mocha": "^10.0.2",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.4",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "^4.3.10",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
